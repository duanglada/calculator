// import angular material
@import "../../node_modules/angular-material/angular-material.css"

#content
  background-color: #4DB6AC

.header
  background-color: transparent !important

.calc
  width: 600px
  margin: 0 auto
  margin-top: 100px

  .display
    background: #f5f5f5
    color: #795548

    .up, .bottom
      height: 80px

  .controls
    .number
      background-color: #8D6E63
    .control
      background-color: #4DB6AC

    .number, .control
      button
        padding: 0
        margin: 0
        font-size: 32px
        color: #fff
        height: 100%

    .number button
      &:hover, &:focus
        background-color: #8D6E63 !important

    .control button
      &:hover, &:focus
        background-color: #4DB6AC
